{
  "output": {
    "filePath": "context-full.xml",
    "style": "xml",
    "showLineNumbers": true
  },
  "ignore": {
    "customPatterns": [
      "node_modules/**",
      ".git/**",
      ".cursor/**",
      "**/target/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/.npm-cache/**",
      "**/.env",
      "**/.env.*",
      "context*.xml",
      "context-*.xml",
      "*.log",
      ".DS_Store",
      "**/*.bin",
      "**/*.json.bak",
      "**/*.json.tmp"
    ]
  },
  "include": [
    "README.md",
    ".gitignore",
    "Makefile",
    "repomix.config.json",
    "SNIP.md",
    "Scarb.toml",
    "Scarb.lock",
    "snfoundry.toml",
    "deployments/**",
    "src/**",
    "tests/**",
    "sdk/package.json",
    "sdk/tsconfig.json",
    "sdk/README.md",
    "sdk/src/**",
    "scripts/deploy.sh",
    "scripts/deploy-js/package.json",
    "scripts/deploy-js/tsconfig.json",
    "scripts/deploy-js/deploy.ts",
    "scripts/demo/package.json",
    "scripts/demo/demo.ts",
    "demo/index.html"
  ]
}
