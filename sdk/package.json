{
  "name": "@starknet-stealth/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Starknet Stealth Addresses (SNIP-XX Reference Implementation)",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
