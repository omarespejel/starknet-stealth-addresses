  "author": "Omar Espejel <omar@starknet.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omarespejel/starknet-stealth-addresses.git"
  },
  "homepage": "https://github.com/omarespejel/starknet-stealth-addresses#readme",
  "bugs": {
    "url": "https://github.com/omarespejel/starknet-stealth-addresses/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@scure/starknet": "^1.0.0",
    "starknet": "^6.24.1"
  },
  "devDependencies": {
